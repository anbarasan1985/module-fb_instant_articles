/**
 * Implements hook_field_formatter_view().
 */
function fb_instant_articles_display_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  module_load_include('inc', 'fb_instant_articles_display', 'includes/elements');
  $element = array();
  $settings = $display['settings'];

  // Grab the InstantArticle object we're going to be building up.  If it's not
  // present, it means that a site admin selected an FB IA field formatter for
  // a non-FB IA content type.
  if (isset($entity->fb_instant_articles_display_instant_article)) {
    /** @var InstantArticle $instant_article */
    $instant_article = $entity->fb_instant_articles_display_instant_article;
    $active_region = 'none';
    /** @var Header $header */
    $header = $instant_article->getHeader();
    /** @var Footer $footer */
    $footer = $instant_article->getFooter();

    // Determine which region this field belongs to.
    $regions = $entity->fb_instant_articles_display_layout_settings->settings['regions'];
    foreach ($regions as $region => $fields) {
      if (in_array($field['field_name'], $fields)) {
        $active_region = $region;
        break;
      }
    }

    // We might not have added a footer. If the active region is a footer,
    // ensure it exists before continuing.
    if ($active_region === 'footer' && empty($footer)) {
      $footer = Footer::create();
      $instant_article->withFooter($footer);
    }

    // For each FBIA formatter, place according to the set region, only if it
    // actually makes sense.  ie you can't put a Kicker into the footer.
    switch ($display['type']) {
      case 'fbia_subtitle_formatter':
        if ($active_region === 'header') {
          fb_instant_articles_display_field_format_subtitle($items, $header);
        }
        break;
      case 'fbia_kicker_formatter':
        if ($active_region === 'header') {
          fb_instant_articles_display_field_format_kicker($items, $header);
        }
        break;
      case 'fbia_author_formatter':
        if ($active_region === 'header') {
          fb_instant_articles_display_field_format_author($items, $header);
        }
        break;
      case 'fbia_ad_formatter':
        if ($active_region === 'header') {
          fb_instant_articles_display_field_format_ad_element($items, $header, $settings);
        }
        break;
      case 'fbia_image_formatter':
        // Images are only allowed in the header and body.
        $pass_region = null;
        if ($active_region === 'header') {
          $pass_region = $header;
        }
        elseif ($active_region === 'body') {
          $pass_region = $instant_article;
        }
        if ($pass_region) {
          fb_instant_articles_display_field_format_image_element($items, $pass_region, $settings);
        }
        break;
      case 'fbia_video_formatter':
        $pass_region = null;
        if ($active_region === 'header') {
          $pass_region = $header;
        }
        else if ($active_region === 'body') {
          $pass_region = $header;
        }
        if ($pass_region) {
          fb_instant_articles_display_field_format_video_element($items, $pass_region, $settings);
        }
        break;
      case 'fbia_blockquote_formatter':
        if ($active_region === 'body') {
          fb_instant_articles_display_field_format_text_container($items, $instant_article, Blockquote::create());
        }
        break;
      case 'fbia_pullquote_formatter':
        if ($active_region === 'body') {
          fb_instant_articles_display_field_format_text_container($items, $instant_article, PullQuote::create());
        }
        break;
      case 'fbia_analytics_formatter':
        if ($active_region === 'body') {
          fb_instant_articles_display_field_format_analytics_element($items, $instant_article, $settings);
        }
        break;
      case 'fbia_interactive_formatter':
        if ($active_region === 'body') {
          fb_instant_articles_display_field_format_interactive_element($items, $instant_article, $settings);
        }
        break;
      case 'fbia_list_formatter':
        if ($active_region === 'body') {
          fb_instant_articles_display_field_format_list_element($items, $instant_article, $settings);
        }
        break;
      case 'fbia_social_formatter':
        if ($active_region === 'body') {
          fb_instant_articles_display_field_format_social_element($items, $instant_article);
        }
        break;
      case 'fbia_credits_formatter':
        if ($active_region === 'footer') {
          fb_instant_articles_display_field_format_credits($items, $footer);
        }
        break;
      case 'fbia_copyright_formatter':
        if ($active_region === 'footer') {
          fb_instant_articles_display_field_format_copyright($items, $footer);
        }
        break;
      case 'fbia_transformer_formatter':
        if ($active_region === 'body') {
          fb_instant_articles_display_field_format_transfomer($items, $instant_article, $instance, $langcode);
        }
        break;
    }
    return $element;
  }
}

/**
 * Remove formatters from view modes which are not Facebook Instant Articles.
 */
function fb_instant_articles_display_cleanup_view_mode_formatters(&$form) {
  foreach ($form['fields'] as $field_key => $field) {
    if (strpos($field_key, '#') === FALSE) {
      foreach ($field['format']['type']['#options'] as $format_key => $format) {
        if (strpos($format_key, 'fbia') !== FALSE) {
          unset($form['fields'][$field_key]['format']['type']['#options'][$format_key]);
        }
      }
    }
  }
}

/**
 * Format time elements.
 */
function fb_instant_articles_display_time_element($timestamp, $class) {
  $class = ' class="' . $class . '"';

  $date = new DateTime("@$timestamp");
  $datetime = ' datetime="' . $date->format(DateTime::ATOM) . '"';
  $text_time = $date->format('F jS, g:i A');
  $element = '<time' . $class . $datetime . '>' . $text_time . '</time>';

  return $element;
}
